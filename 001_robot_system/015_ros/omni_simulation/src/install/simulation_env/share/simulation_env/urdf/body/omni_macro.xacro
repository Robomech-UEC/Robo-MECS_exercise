<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <!--barrel macro-->
    <xacro:macro name="barrel" params="pkg_name prefix parent dir">
        <joint name="${prefix}_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="${prefix}_link"/>
            <origin rpy="0 0 ${pi/2 + dir}" xyz="${0.022*cos(dir)} ${0.022*sin(dir)} 0.0065"/>
            <axis xyz="-1 0 0"/>
            <dynamics damping="0.001"/>
        </joint>
        <link name="${prefix}_link">
            <visual>
                <geometry>
                    <mesh filename="file://$(find ${pkg_name})/model/barrel.stl" />
                </geometry>
                <material name="black">
                    <color rgba="0 0 0 1"/>  <!-- 赤色 (R=1, G=0, B=0, Alpha=1) -->
                </material>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="file://$(find ${pkg_name})/model/barrel.stl" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.004"/>
                <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
            </inertial>
        </link>
        <gazebo reference="${prefix}_link">
            <mu1 value="50" />
            <mu2 value="50" />
            <kp value="7500" />
            <kd value="20" />
            <material>Gazebo/Black</material>
        </gazebo>
    </xacro:macro>

    <!--here-->
    <xacro:macro name="omni" params="pkg_name prefix parent xyz rpy">
        <joint name="${prefix}_base_joint" type="fixed">
            <parent link="${parent}"/>
            <child link="${prefix}_base_link"/>
            <origin xyz="${xyz}" rpy="${rpy}"/>
        </joint>
        <link name="${prefix}_base_link">
            <inertial>
                <mass value="0.010"/>
                <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
            </inertial>
        </link>

        <!--Suspension-->
        <joint name="${prefix}_sus_joint" type="prismatic">
            <parent link="${prefix}_base_link"/>
            <child link="${prefix}_sus_link"/>
            <limit lower="-0.0005" upper="0.0005" effort="1000" velocity="0.05" />
            <axis xyz="0 0 1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <dynamics damping="0.001"/>
        </joint>

        <gazebo reference="${prefix}_sus_joint">
            <kp>50000</kp>
            <kd>500</kd>
        </gazebo>
        <link name="${prefix}_sus_link">
            <inertial>
                <mass value="0.020"/>
                <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
            </inertial>
        </link>

        <joint name="${prefix}_joint" type="continuous">
            <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
            <parent link="${prefix}_sus_link"/>
            <child link="${prefix}_housing_link"/>
            <axis xyz="0 0 1" />
            <!-- FT90 effort maximized -->
            <limit effort="5000" velocity="65"/>
            <joint_properties damping="0.01" friction="0.01" />
        </joint>

        <link name="${prefix}_housing_link">
            <visual>
                <origin xyz="0 0 0" rpy="${-1 * pi/2} 0 ${-1 * pi/2}"/>
                <geometry>
                    <mesh filename="file://$(find ${pkg_name})/model/wheel_base.dae"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="0.05"/>
                <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
            </inertial>
        </link>
        <gazebo reference="${prefix}_housing_link">
            <material>Gazebo/Gray</material>
        </gazebo>

        <joint name="${prefix}_housing_s_joint" type="fixed">
            <parent link="${prefix}_housing_link"/>
            <child link="${prefix}_housing_s_link"/>
            <origin rpy="0 ${pi} 0" xyz="0 0 0"/>
        </joint>
        <link name="${prefix}_housing_s_link">
            <inertial>
                <mass value="0.05"/>
                <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
            </inertial>
        </link>

        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_1" parent="${prefix}_housing_link" dir="0"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_2" parent="${prefix}_housing_link" dir="${2*pi/5}"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_3" parent="${prefix}_housing_link" dir="${2 * 2*pi/5}"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_4" parent="${prefix}_housing_link" dir="${3 * 2*pi/5}"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_5" parent="${prefix}_housing_link" dir="${4 * 2*pi/5}"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_6"  parent="${prefix}_housing_s_link" dir="0"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_7"  parent="${prefix}_housing_s_link" dir="${2*pi/5}"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_8"  parent="${prefix}_housing_s_link" dir="${2 * 2*pi/5}"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_9"  parent="${prefix}_housing_s_link" dir="${3 * 2*pi/5}"/>
        <xacro:barrel pkg_name="${pkg_name}" prefix="${prefix}_barrel_10" parent="${prefix}_housing_s_link" dir="${4 * 2*pi/5}"/>
    </xacro:macro>
</robot>
