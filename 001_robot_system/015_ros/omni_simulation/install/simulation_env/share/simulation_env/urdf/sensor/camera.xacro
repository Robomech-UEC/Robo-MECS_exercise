<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="camera" params="pkg_name robot_name">
        <joint name="${robot_name}_cam_housing_joint" type="revolute">
            <origin xyz="0.063 0 0.08" rpy="0 0 0"/>
            <parent link="${robot_name}_base_link"/>
            <child link="${robot_name}_cam_housing_link"/>
            <axis xyz="0 1 0"/>
            <limit lower="${-pi/3}" upper="${pi/6}" effort="3" velocity="4"/>
            <joint_properties damping="0.01" friction="0.01" />
        </joint>

        <xacro:include filename="body/shape_macro.xacro"/>
        <xacro:box_link name="${robot_name}_cam_housing"
                        x="29" y="1" z="1"
                        ofsx="${29/2}" ofsy="0" ofsz="0"
                        mass="0.01" collision="false" />

        <joint name="${robot_name}_cam_joint" type="fixed">
            <parent link="${robot_name}_cam_housing_link"/>
            <child link="${robot_name}_cam_link"/>
            <origin xyz="0.031 0 0" rpy="0 0 0"/>
        </joint>

        <link name="${robot_name}_cam_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 ${pi/2}"/>
                <geometry>
                    <mesh filename="file://$(find ${pkg_name})/model/cam.dae"/>
                </geometry>
            </visual>
        </link>
        <gazebo reference="${robot_name}_cam_link">
            <sensor type="camera" name="/${robot_name}_camera">    <always_on>true</always_on>
                <update_rate>20</update_rate>
                <visualize>true</visualize>
                <camera name="${robot_name}_camera">
                <horizontal_fov>1.2</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>800</width>
                    <height>600</height>
                </image>
                <clip>
                    <near>0.02</near>
                    <far>300</far>
                </clip>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
                <distortion>
                    <k1>-0.25</k1>
                    <k2>0.12</k2>
                    <k3>0.0</k3>
                    <p1>0.0</p1>
                    <p2>0.0</p2>
                    <center>0.5 0.5</center>
                </distortion>
                </camera>
                <plugin name="${robot_name}_camera_controller" filename="libgazebo_ros_camera.so">
                    <!-- <ros> -->
                        <!-- <remapping>~/image_raw:=/${robot_name}/camera/image_raw</remapping>
                        <remapping>~/image_raw/compressed:=/${robot_name}/camera/image_raw/compressed</remapping>
                        <remapping>~/image_raw/compressedDepth:=/${robot_name}/camera/image_raw/compressedDepth</remapping>
                        <remapping>~/image_raw/theora:=/${robot_name}/camera/image_raw/theora</remapping> -->
                    <!-- </ros> -->
                    <imageTopicName>image_raw</imageTopicName>
                    <cameraInfoTopicName>camera_info</cameraInfoTopicName>
                    <cameraName>/${robot_name}_camera</cameraName>
                    <frameName>${robot_name}_cam_link</frameName>
                    <updateRate>10.0</updateRate>
                    <CxPrime>0.0</CxPrime>
                    <Cx>0.0</Cx>
                    <Cy>0.0</Cy>
                    <focalLength>0.0</focalLength>
                    <hackBaseline>0.12</hackBaseline>
                    <distortionK1>0.05</distortionK1>
                    <distortionK2>-0.05</distortionK2>
                    <distortionK3>0.0</distortionK3>
                    <distortionT1>0.0</distortionT1>
                    <distortionT2>0.0</distortionT2>
                </plugin>
            </sensor>
        </gazebo>
    </xacro:macro>
</robot>
